  "dependencies": {
    "cuid": "^3.0.0",
    "drizzle-orm": "^0.39.1",
    "next": "15.1.6",
    "pg": "^8.13.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
